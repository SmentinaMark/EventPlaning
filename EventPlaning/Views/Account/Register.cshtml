@model EventPlaning.Models.ViewModels.UserViewModels.RegisterViewModel

<form method="post" asp-controller="Account" asp-action="Register">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Регистрация</h3>

                        <div class="form-outline mb-4">
                            <input asp-for="Email" type="email" id="typeEmailX-2" class="form-control form-control-lg" />
                            <label asp-for="Email" class="form-label" for="typeEmailX-2"></label>
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="Password" type="password" id="typePasswordX-2" class="form-control form-control-lg" />
                            <label class="form-label" for="typePasswordX-2">Пароль</label>
                            <span asp-validation-for="Password"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="PasswordConfirm" type="password" id="typePasswordX-2" class="form-control form-control-lg"/>
                            <label class="form-label" for="typePasswordX-2">Подтвердить пароль</label>
                            <span asp-validation-for="PasswordConfirm"></span>
                        </div>

                        <div>
                            <input type="submit" value="Зарегистрироваться" class="btn btn-primary btn-lg btn-block" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>